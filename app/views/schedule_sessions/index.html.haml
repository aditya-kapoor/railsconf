.row
  %h2 My Schedule
%section.tabs
  .row
    .twelve.columns
      %ul.tab-nav
        %li.active
          %a{:href => "#"} Mon
        %li
          %a{:href => "#"} Tue
        %li
          %a{:href => "#"} Wed
        %li
          %a{:href => "#"} Thu

  .tab-content.active
    = render partial: 'partials/schedule_user_day', locals: {day: 'mon', day_talks: @mon}
  .tab-content
    = render partial: 'partials/schedule_user_day', locals: {day: 'tue', day_talks: @tue}
  .tab-content
    = render partial: 'partials/schedule_user_day', locals: {day: 'wed', day_talks: @wed}
  .tab-content
    = render partial: 'partials/schedule_user_day', locals: {day: 'thu', day_talks: @thu}
